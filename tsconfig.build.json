{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitUseStrict": true,
    "allowJs": true,
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "declaration": true,
    // decorators required for using class-transformer (for parsing JSON)
    // https://github.com/typestack/class-transformer
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "**/*.wip.tsx"]
}
